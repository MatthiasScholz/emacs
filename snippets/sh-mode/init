# -*- mode: snippet -*-
# name: init
# key: init
# --
#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

# Predefine variables for current file and dir
readonly _dir="\$(cd "\$(dirname "\${BASH_SOURCE[0]}")" && pwd)"
readonly _file="\${__dir}/\$(basename "\${BASH_SOURCE[0]}")"
readonly _base="\$(basename \${__file} .sh)"
readonly _root="\$(cd "\$(dirname "\${__dir}")" && pwd)"